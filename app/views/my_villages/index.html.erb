<div class="row">
  <div class=" col-md-12">
    <div class="box">
      <div class="box-body">
        <table class="table table-hover villages">
          <tbody><tr>
            <th>Coordenadas</th>
            <th>Nome</th>
            <th>Pontos</th>
            <th>Tropas na praça</th>
            <th>Tropas total</th>
            <th>Recursos</th>
            <th>Armazém</th>
          </tr>
          <% 
            @villages.each do |village|
          %>
          <tr>
            <td><%= render_coord(village) %></td> 
            <td><%= village.name %></td> 
            <td><%= village.points %></td> 
            <td><%= render_troops(@screens[village.vid].current_units,false) %></td> 
            <td><%= render_troops(@screens[village.vid].all_units,false) %></td> 
            <td><%= render_resource(@screens[village.vid].resources) %></td> 
            <td><%= @screens[village.vid].storage_size %></td> 
          </tr>
            <% 
          end
          %>
        </tbody></table>
      </div>
    </div>
  </div>
</div>

