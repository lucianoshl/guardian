<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Bordered Table</h3>
  </div>

  <div class="col-md-4">
    <%= polar_area_chart(@data) %>
  </div>

  <div class="box-body">
    <table class="table table-bordered">
      <tbody><tr>
        <th>Coordenadas</th>
        <th>Pontos</th>
        <th>Estado</th>
        <th>Próximo evento</th>
      </tr>
      <% 
        image_state = {
          "waiting_report" => "https://dsbr.innogamescdn.com/8.47.1/29553/graphic/command/attack_small.png"
        }

        @villages.each do |village|
      %>
      <tr>
        <td><%= village.x %>|<%= village.y %></td> 
        <td><%= village.points %></td> 
        <td><%= village.state %></td> 
        <td><%= village.next_event.strftime("%d/%m - %H:%M:%S") %></td> 
      </tr>
      <% 
        end
      %>
      </tr>
      </tbody></table>
  </div>

  <div class="box-footer clearfix">
    <ul class="pagination pagination-sm no-margin pull-right">
      <li><a href="#">«</a></li>
      <li><a href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">»</a></li>
    </ul>
  </div>