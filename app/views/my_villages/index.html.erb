<div class="row">
  <div class=" col-md-12">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Bordered Table</h3>
      </div>

      <div class="box-body">
        <table class="table table-hover villages">
          <tbody><tr>
            <th>Coordenadas</th>
            <th>Nome</th>
            <th>Pontos</th>
            <th>Tropas</th>
            <th>Recursos</th>
            <th>Armaz√©m</th>
          </tr>
          <% 
            @villages.each do |village|
          %>
          <tr class="village-line" village-id="<%= village.id %>">
            <td><%= village.x %>|<%= village.y %></td> 
            <td><%= village.name %></td> 
            <td><%= village.points %></td> 
            <td><%= render_troops(@screens[village.vid].units,false) %></td> 
            <td><%= render_resource(@screens[village.vid].resources) %></td> 
            <td><%= @screens[village.vid].storage_size %></td> 
          </tr>
            <% 
          end
          %>
        </tbody></table>
      </div>
    </div>
  </div>
</div>

